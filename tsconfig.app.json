{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "target": "ES2017",
    "lib": ["ES2017", "DOM", "DOM.Iterable"],
    "types": ["node", "element-plus/global"],
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
